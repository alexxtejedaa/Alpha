<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha Portal</title>
    <script type="importmap"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="portal">
        <div class="logotype">
            @await Html.PartialAsync("Partials/Components/_AlphaLogotype")
        </div>
        <div class="side">
            @await Html.PartialAsync("Partials/Components/_NavLinks")
        </div>

        <!-- TOP AREA -->
        <div class="top">
            <!-- tomt fält till vänster -->
            <div></div>

            <!-- gear + user + dropdown -->
            <div class="top-right">
                <!-- gear-ikon (klickbar) -->
                <div class="gear-trigger" id="gearTrigger">
                    <img src="~/images/gear-solid.svg" alt="Settings" class="gear-icon" />
                </div>

                <!-- user-ikon (synlig alltid) -->
                <img src="~/images/circle-user-solid.svg" alt="User" class="profile-avatar" />

                <!-- dropdown, dold tills klick -->
                <div class="settings-dropdown" id="settingsDropdown">
                    <div class="settings-user-info">
                        <img src="~/images/circle-user-solid.svg" alt="User" class="profile-avatar" />

                        <!-- ( NEW CODE START ) - Visa claim "FullName" i stället för .Name -->
                        <span>
                            @User.FindFirst("FullName")?.Value
                        </span>
                        <!-- ( NEW CODE END ) -->
                    </div>

                    <form method="post" asp-action="Logout" asp-controller="Auth" class="logout-row">
                        <button type="submit" class="logout-btn">
                            <img src="~/images/right-from-bracket-solid.svg" alt="Logout" class="logout-icon" />
                            <span>Logout</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!-- END TOP -->

        <div class="main">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/portal.js" asp-append-version="true"></script>
    }
</body>
</html>
